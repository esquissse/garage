<p id="notice"><%= notice %></p>

<p>
  <strong>Libelle:</strong>
  <%= @marque.libelle %>
</p>
<fieldset>
  <table>
    <thead>
    <tr>
      <th>Marque</th>
      <th>Modèle</th>
      <th>Couleur</th>
      <th>Immatriculation</th>
      <th>Propriétaire</th>
    </tr>
    </thead>
    <tbody>
     <% @marque.voitures.each do |voiture| %>
       <tr>
         <td><%= voiture.marque.try(:libelle)%></td>
         <td><%= voiture.modele %></td>
         <td><%= voiture.couleur %></td>
         <td><%= link_to voiture.immatriculation, voiture %></td>
         <td><%= voiture.personne.try(:nom_complet) %>
       </tr>
     <% end %>
    </tbody> 
  </table>
</fieldset>

<%= link_to 'Edit', edit_marque_path(@marque) %> |
<%= link_to 'Back', marques_path %>
